<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', book_new:@book_new, user:@user %>
    </div>
    <div class="col-md-8 offset-md-1">
     <h2>Book detail</h2>
    <table class="table">
     <tr>
      <td><%= link_to user_path(@book.user.id) do %><%= attachment_image_tag  @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "50x50"  %><%= @book.user.name %><% end %></td>
      <td><%= link_to book_path(@book.id) do %><%= @book.title %><% end %></td>
      <td><%= @book.body %></td>
      <td><% if @book.user == current_user %><%= link_to "Edit", edit_book_path(@book) %><% end %></td>
      <td><% if @book.user == current_user %><%= link_to "Destroy", book_path(@book), method: :delete %><% end %></td>
      <td>
        <% if @book.favorited_by?(current_user) %>
         <%= link_to book_favorites_path(@book), method: :delete do %>
          <i class="fas fa-heart"><%= @book.favorites.count %></i>
         <% end %>
        <% else %>
         <%= link_to book_favorites_path(@book), method: :post do %>
          <i class="fas fa-heart"><%= @book.favorites.count %></i>
         <% end %>
        <% end %>
      </td>
      <td>コメント数：<%= @book.book_comments.count %></td>
     </tr>
    </table>

    <div class="comments">
      <table class="table">
      <% @book.book_comments.each do |book_comment| %>
      <tr>
       <td><%= image_tag('no_image.jpg',size: "50x50") %><%= book_comment.user.name %></td>
       <td><%= book_comment.comment %></td>
       <td><% if book_comment.user == current_user %><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete %><% end %></td>
      </tr>
      <% end %>
      </table>
     </div>
     <div class="new-comment">
      <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
      <%= f.text_area :comment, rows:'5' %>
      <%= f.submit "送信" %>
　　　<% end %>
     </div>



</div>





