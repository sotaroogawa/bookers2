<table class="table">
  <tr>
    <td>
      <%= link_to user_path(book.user.id) do %>
        <%= attachment_image_tag  book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "50x50"  %>
        <%= book.user.name %>
      <% end %>
    </td>
    <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
    <td><%= book.body %></td>
    <td><% if book.user == current_user %><%= link_to "Edit", edit_book_path(book) %><% end %></td>
    <td><% if book.user == current_user %><%= link_to "Destroy", book_path(book), method: :delete %><% end %></td>
    <td id="favorite_buttons_<%= book.id %>">
      <%= render "favorites/favorite", book: book %>
    </td>
    <td>コメント数：<%= book.book_comments.count %></td>
  </tr>
</table>