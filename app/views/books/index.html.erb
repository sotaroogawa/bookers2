<%= render 'searchs/form' %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', book_new:@book_new, user:@user %>
    </div>
  <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table table-hover table-inverce">
      <tr>
        <th=colspan="3"></th>
        <th>Title</th>
        <th>Body</th>
      </tr>
      <% @books.each do |book| %>
      <tr>
        <th>
         <%= link_to user_path (book.user.id) do %>
          <%= attachment_image_tag  book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40"  %>
         <% end %>
        </th>
        <th><%= link_to book_path(book.id) do %><%= book.title %><% end %></th>
        <th><%= book.body %></th>
        <th id="favorite_buttons_<%= book.id %>">
          <%= render "favorites/favorite", book: book %>
        </th>
        <th><%= " コメント数：#{book.book_comments.count}" %></th>
       </tr>
       <% end %>
    </table>
   </div>
  </div>
</div>
